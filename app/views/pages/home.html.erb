<h1 class="my-4 text-3xl font-bold text-center">Dados de transparência de Piraquara-PR</h1>

    <div class="flex flex-col">
        <div class="-m-1.5 overflow-x-auto">
            <div class="p-1.5 min-w-full inline-block align-middle">
            <div class="border rounded-lg overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr class="divide-x divide-gray-200">
                    <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Nome</th>
                    <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Matrícula</th>
                    <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">Cargo</th>
                    <th scope="col" class="px-6 py-3 text-end text-xs font-medium text-gray-500 uppercase">Lotação</th>
                    <th scope="col" class="px-6 py-3 text-end text-xs font-medium text-gray-500 uppercase">Salário</th>
                    </tr>
                </thead>
                
                <tbody class="divide-y divide-x divide-gray-200">
                    <% @servidores.each do |servidor| %>

                    <tr class="odd:bg-white even:bg-gray-100 divide-x">
                    <td class="px-6 py-4 divide-y divide-gray-200 whitespace-nowrap text-sm font-medium text-gray-800"><%= servidor.nome %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800"><%= servidor.matricula %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800"><%= servidor.cargo %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800"><%= servidor.lotacao %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-end text-sm font-medium">
                    <%= ActiveSupport::NumberHelper.number_to_currency( servidor.salario_liquido, locale: :'pt-BR') %>
                    </td>
                    </tr>
                    <% end %>
                </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>